{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "ES2020"],
    "target": "ESNext",

    "useDefineForClassFields": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "strict": true,
  }
}
